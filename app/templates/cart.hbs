{{page-title 'Cart'}}
<main class='container mt-5'>
  <h1>Shopping Cart</h1>
  <ol class='breadcrumb'>
    <li class='breadcrumb-item'><LinkTo @route='index'>Home</LinkTo></li>
    <li class='breadcrumb-item active'>Shopping Cart</li>
  </ol>
  {{#each this.cart.itemList as |item|}}
    <div class='d-flex align-items-center'>
      <h4>T-Shirt:{{item.name}}</h4>
    </div>
  {{/each}}
  <section class='w-50 ms-auto text-end mb-5'>
    <div class='row'>
      <spam class='col'>Subtotal</spam>
      <spam class='col'>{{currency this.subtotal}}</spam>
    </div>
    <div class='row'>
      <spam class='col'>Tax</spam>
      <spam class='col'>{{currency this.tax}}</spam>
    </div>
    <div class='row'>
      <spam class='col'>Total</spam>
      <spam class='col'>{{currency this.total}}</spam>
    </div>
  </section>
  <button type='button' class='btn btn-success float-end'>Buy</button>
</main>
{{outlet}}
